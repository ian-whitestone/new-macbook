// SublimeLinter Settings - User
{
    "debug": true,
    "lint_mode": "load_save",
    "linters": {
        // The name of the linter you installed
        "pylint": {
            // Disables the linter. The default here is 'not set'
            "disable": false,

            // Additional arguments for the command line. Either a 'string'
